#------------------------------------------------------------------------------
# all:
#------------------------------------------------------------------------------

all:
		g++ $(CFLAGS) main.cpp $(LFLAGS) -o ../bin/strBridge

#------------------------------------------------------------------------------
# clean:
#------------------------------------------------------------------------------

clean:
		rm -f ../bin/strBridge

#------------------------------------------------------------------------------
# install:
#------------------------------------------------------------------------------

install:
		mkdir -p $(bin-dir)
		install -m755 ../bin/strBridge $(bin-dir)